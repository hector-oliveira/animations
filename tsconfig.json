{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    /* Importe module JSON */
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "strict": true,
    "baseUrl": "./",
    "paths": {
      // "@animations/*": ["./src/animations/*"],
      "@animations/*" : ["./src/animations/*"],
      "@assets/*"     : ["./src/assets/*"],
      "@components/*" : ["./src/components/*"],
      "@data/*"       : ["./src/data/*"],
      "@hooks/*"      : ["./src/hooks/*"],
      "@interfaces/*" : ["./src/interfaces/*"],
      "@routes/*"     : ["./src/routes/*"],
      "@app/*"        : ["./src/screens/app/*"],
      "@auth/*"       : ["./src/screens/auth/*"],
      "@themes/*"     : ["./src/themes/*"],
    }

  }
}